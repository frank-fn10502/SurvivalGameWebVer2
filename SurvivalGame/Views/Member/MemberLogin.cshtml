
@{
    ViewBag.Title = "MemberLogin";
}

<div class="container">
    <div class="row section-padding-80">
        <div class="col-12  mt-80">

            <button data-toggle="modal" data-target="#Login">Login</button>

            <div class="container-fluid">
                <div class="row mt-30">
                    <form action="#" method="post" class="login100-form validate-form">
                        <span class="login100-form-title p-b-55">
                            Login
                        </span>

                        <div class="wrap-input100 validate-input m-b-16"
                             data-validate="Valid email is required: ex@abc.com">
                            @*<input class="input100" type="text" name="email" placeholder="Email">*@
                            <input class="input100" type="text" name="ModalAccount" id="ModalAccount" placeholder="Account">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-envelope"></span>
                            </span>
                            <div class="invalid-feedback AccountInvalid">帳號開頭只能為大寫或小寫英文</div>
                        </div>

                        <div class="wrap-input100 validate-input m-b-16"
                             data-validate="Password is required">
                            <input class="input100" type="Password" name="ModalPassword" id="ModalPassword" placeholder="Password">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-lock"></span>
                            </span>
                            <div class="invalid-feedback PasswordInvalid">密碼格式錯誤</div>
                        </div>

                        <div class="contact100-form-checkbox m-l-4">
                            <input class="input-checkbox100" id="ckb1" type="checkbox"
                                   name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <div class="container-login100-form-btn p-t-25">
                            <button class="login100-form-btn">
                                Login
                            </button>
                        </div>

                        <div class="text-center w-full p-t-42 p-b-22">
                            <span class="txt1">
                                Or login with
                            </span>
                        </div>

                        <a href="#" class="btn-face m-b-10">
                            <i class="fa fa-facebook-official"></i>
                            Facebook
                        </a>

                        <a href="#" class="btn-google m-b-10">
                            <img src="~/Assets/images/MemberLogin/icons/icon-google.png" />
                            Google
                        </a>

                        <div class="text-center w-full p-t-115">
                            <span class="txt1">
                                Not a member?
                            </span>

                            <a class="txt1 bo1 hov1" href="#">
                                Sign up now
                            </a>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</div>

@section topCss{
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/Assets/fonts/MemberLogin/icon-font.min.css" rel="stylesheet" />
    <link href="~/Assets/css/MemberLogin/MemberLogin.css" rel="stylesheet" />
    <link href="~/Assets/css/MemberLogin/util.css" rel="stylesheet" />
    <link href="~/Assets/css/animate.css" rel="stylesheet" />
}

@section bottomJs
{
    <script src="~/Assets/javaScript/MemberLogin/MemberLogin.js"></script>
    <script src="~/Assets/javaScript/MemberLogin/popper.js"></script>
    <script src="~/Assets/javaScript/MemberLogin/popper.min.js"></script>
    <script src="~/Assets/javaScript/MemberLogin/tooltip.js"></script>
}